<% if signed_in? %>
  <table class="front" summary="For signed-in users">
    <tr>
      <td class="main">
        <h1 class="item">Upload</h1>
        <%= render 'shared/item_form' %>
      </td>
      <td class="sidebar round">
        <%= render 'shared/user_info' %>
      </td>
    </tr>
  </table>
<% else %>
  <h1>Box</h1>
  <p>Welcome to Box, a web application that lets you store and share data. <br />
  </p>
  <% if User.all.empty? %>
    <p>
    The first account you create will have admin privileges, allowing it to create and delete other accounts.<br />
    <%= link_to "Sign up!", signup_path %>
    </p>
  <% end %>
<% end %>
