<tr>
  <td class="item">
    <span class="title">Item No. <%= item.id %></span>
    <span class="timestamp">
      Posted <%= time_ago_in_words(item.created_at) %> ago.
    </span>
  </td>
  <% if current_user?(item.user) %>
  <td>
    <%= link_to "delete",
                item,
                :method => :delete,
                :confirm => "You sure?",
                :title => "Delete #{item.id}"
    %>
  </td>
  <% end %>
</tr>
